# =============================================================================
# ACME Customer Frontend Container
# =============================================================================
# Multi-stage build for optimized container size
# - Stage 1: Install dependencies
# - Stage 2: Build the application
# - Stage 3: Create slim runtime image
# =============================================================================

# -----------------------------------------------------------------------------
# Stage 1: Dependencies
# -----------------------------------------------------------------------------
FROM node:24-alpine AS deps

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install dependencies
RUN npm ci --ignore-scripts

# -----------------------------------------------------------------------------
# Stage 2: Build
# -----------------------------------------------------------------------------
FROM node:24-alpine AS builder

WORKDIR /app

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules

# Copy source files
COPY . .

# Build the application
RUN npm run build

# -----------------------------------------------------------------------------
# Stage 3: Runtime
# -----------------------------------------------------------------------------
FROM node:24-alpine AS runner

LABEL org.opencontainers.image.title="ACME Customer Frontend"
LABEL org.opencontainers.image.description="Customer-facing web application for ACME Inc. e-commerce platform"
LABEL org.opencontainers.image.vendor="ACME Inc."
LABEL org.opencontainers.image.source="https://github.com/cebartling/acme-inc-2026"

# Create non-root user for security
RUN addgroup --system --gid 1001 acme \
    && adduser --system --uid 1001 --ingroup acme acme

WORKDIR /app

# Copy built application from builder stage
COPY --from=builder --chown=acme:acme /app/.output ./.output
COPY --from=builder --chown=acme:acme /app/package.json ./package.json

# Switch to non-root user
USER acme

# Expose the application port
EXPOSE 3000

# Environment variables
ENV NODE_ENV=production
ENV HOST=0.0.0.0
ENV PORT=3000
ENV NITRO_PORT=3000
ENV NITRO_HOST=0.0.0.0

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3000/ || exit 1

# Run the Nitro server
CMD ["node", ".output/server/index.mjs"]
